<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#35195C</item>
        <item name="android:layout_margin">1dp</item>
        <item name="color">#000000</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="NumberButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:layout_margin">1dp</item>
        <item name="color">#000000</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextField">
        <item name="android:paddingLeft">30sp</item>
        <item name="android:paddingStart">30sp</item>
        <item name="android:paddingRight">30sp</item>
        <item name="android:paddingEnd">30sp</item>
    </style>
</resources>