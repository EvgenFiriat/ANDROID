<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBD6E4"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <com.ramotion.fluidslider.FluidSlider
        android:id="@+id/fluid_slider"
        style="@style/FluidSliderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:bar_color="#00BCD4"
        app:bubble_text_color="#3F51B5"
        app:end_text=""
        app:initial_position="0.25"
        app:start_text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/brush_size_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#E91E63"
            android:backgroundTint="@color/black"
            android:text="Cancel"
            app:backgroundTint="#E91E63" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/brush_size_confirm_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="#009688"
            android:text="Apply" />
    </LinearLayout>


</LinearLayout>